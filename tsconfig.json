{
  "compilerOptions": {
    "pretty": true,
    "lib": [
      "es5",
      "es6"
    ],
    "rootDir": ".",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true,
    "skipLibCheck": true,

  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist"]
}